# Docker Compose Environment Variables for Asterisk

# Container settings
CONTAINER_NAME=asterisk-server
ASTERISK_IMAGE=andrius/asterisk:latest

# Host paths (relative to docker-compose.yml)
ASTERISK_CONFIG_PATH=./etc/asterisk
ASTERISK_LOGS_PATH=./logs
ASTERISK_RECORDINGS_PATH=./recordings/raw

# Port mappings
SIP_PORT=5060
RTP_PORT_RANGE_START=10000
RTP_PORT_RANGE_END=10099
IAX2_PORT=4569
AMI_PORT=5038
HTTP_PORT=8088

# User/Group IDs (set to your local user)
ASTERISK_UID=1000
ASTERISK_GID=1000

# Google Cloud API Credentials
GOOGLE_CLOUD_API_KEY=AIzaSyCmy5fG5wpXd2jGZ8g9rq8tyC99HUVfwOc
GOOGLE_APPLICATION_CREDENTIALS=./config/credentials.json
GOOGLE_CLOUD_PROJECT_ID=capital-one-hackathon-469410

# API Configuration
SPEECH_TO_TEXT_MODEL=latest_long
TRANSLATION_AUTO_DETECT=true
TTS_VOICE_QUALITY=neural2

# File Paths
RECORDINGS_RAW_PATH=./recordings/raw
RECORDINGS_PROCESSED_PATH=./recordings/transcripts
RECORDINGS_CONVERTED_PATH=./recordings/converted
RECORDINGS_GENERATED_PATH=./recordings/generated_audio

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

PRIMARY_LANGUAGE=hi-IN                    # Default language (Hindi - India)
LANGUAGE_AUTO_DETECT=true                 # Enable automatic language detection
SPEECH_TO_TEXT_MODEL=latest_long          # Google Cloud speech model (latest_long, latest_short, phone_call)
AUDIO_SAMPLE_RATE=16000                   # Audio sample rate for processing

# Translation Services (in order of preference)
TRANSLATION_SERVICES=google_cloud,free_google,mymemory,libretranslate,pons

# Text-to-Speech Configuration
TTS_VOICE_QUALITY=neural2                 # Voice quality (neural2, standard)

# Audio Processing
AUDIO_FORMATS=.ulaw,.wav,.gsm,.mp3,.flac  # Supported audio formats
PROCESSING_DELAY=2                        # Seconds to wait before processing new files

# Application Settings
TRANSLATION_ENABLED=true                  # Enable translation to English
TARGET_LANGUAGE=en                        # Target language for translation
